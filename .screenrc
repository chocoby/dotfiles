escape ^Tt
startup_message off
autodetach on
defscrollback 4000
hardcopydir "$HOME/screenlog"
hardcopy_append on
logfile "$HOME/screenlog/%H-%Y%m%d-%c-%n.log"
deflog on
hardstatus alwayslastline "%{= wk} %-w%{=b dk} %n %t %{-}%+w %= [%H] %m/%d %c%{-}"
screen 1
bind c eval 'screen 1'
bind u encoding utf8
bind e encoding eucJP
bind s eval 'split' 'focus' 'screen 1'
bind q only
bind w windowlist -b

